@model Restorent.ViewsModel.HomeModel
<!DOCTYPE html>

<html class ="no-js" lang="zxx">
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />


 <head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Basmoti - Restaurant Bootstrap 5 Template</title>
    <meta name="description" content="">
    <meta name="robots" content="noindex, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">

    <!-- all css here -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/icons.css">
    <link rel="stylesheet" href="~/assets/css/plugins.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <script src="~/assets/js/vendor/modernizr-3.11.7.min.js"></script>


  </head>


<body>


    <header class="header-area transparent-bar header-black">
        <div class="container">
            <div class="row">


                <!------------------------SYSTEM SETTING LOGO  --------- DONE -------------------->


                <div class="col-lg-3 col-md-4 col-5 col-sm-4">
                    <div class="logo">
                        <a href="index.html">
                            <img alt="" src="~/Admin/assets/img/@Model.SystemSetting.SystemSettingLogoImageUrl">
                        </a>
                    </div>
                </div>




                <!------------------------MAStER MENU --------- DONE -------------------->

                <div class="col-lg-9 col-md-8 col-7 col-sm-8 relative">
                    <div class="menu-search-bundle">
                        <div class="main-menu">
                            <nav>
                                <ul>

                                    @foreach (var item in Model.ListMasterMenu)
                                    {
                                        <li class="top-hover">
                                            <a href="@item.MasterMenuUrl">@item.MasterMenuName </a>

                                        </li>
                                    }


                                </ul>
                            </nav>
                        </div>





                        <div class="search-wrap">
                            <button class="search-toggle">
                                <i class="fa fa-search"></i>
                            </button>
                            <div class="search">
                                <form action="#">
                                    <input type="search" placeholder="Search here">
                                    <button type="submit">
                                        Search
                                    </button>
                                </form>
                            </div>
                        </div>


                    </div>
                </div>


          </div>
        </div>
    </header>





    <div>
        @RenderBody()
    </div>






    <footer class="footer-area">
        <div class="footer-area-top black-bg pt-95 pb-60">
            <div class="container">
                <div class="row">


                    <!------------------------The Base of SocialMedia-------  DONE ---------------->


                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">

                            <div class="footer-title mb-30">
                                <h4>About Us</h4>
                            </div>


                            <div class="footer-about">
                                <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do tempor eget loved dost venenatis.</p>




                                <!--This page Radict to (( Conatct US Page   ))-->
                                <div class="footer-map">
                                    <a href="contact.html"><i class="ion-ios-location-outline"></i> View on map</a>
                                </div>

                            </div>



                            <div class="social-icon">
                                <ul>
                                    @foreach (var item in Model.ListMasterSocialMedia)
                                    {

                                        <li>@Html.Raw(item.MasterSocialMediaUrl) @Html.Raw(item.MasterSocialMediaImageUrl)</li>

                                    }
                                </ul>
                            </div>

                        </div>
                    </div>




                    <!-----------------------The Base Of Conatct US---------  DONE -------------->

                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">

                            <div class="footer-title mb-30">
                                <h4>contact Us</h4>
                            </div>

                            @foreach (var item in Model.ListMasterContactUsInformation)
                            {

                                <div class="footer-cont-info">

                                    <div class="single-footer-cont-info">

                                        <div class="cont-info-icon">
                                            @Html.Raw(item.MasterContactUsInformationImageUrl)
                                        </div>

                                        <div class="cont-info-content">
                                            <p>@Html.Raw(@item.MasterContactUsInformationIdesc)</p>
                                            @*<p><a @Html.Raw(@item.MasterContactUsInformationRedirect)>@Html.Raw(@item.MasterContactUsInformationIdesc)</a></p>
                                        *@
                                        </div>


                                    </div>


                                </div>

                            }
                           

                        </div>
                    </div>






                    <!-------------------------The DataBase of WorkingHour -----  DONE -------------------->
                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">


                            <div class="footer-title mb-30">
                                <h4>Opening Time</h4>
                            </div>
  
                            @foreach (var item in Model.ListMasterWorkingHour)
                            {
                                @*@Html.Raw(item.MasterWorkingHourIdName)*@

                                <div class="open-time pr-30" style="padding-bottom: 3%;">
                                    <ul>

                                        <li>

                                            @item.MasterWorkingHourIdName
                                            <span>@item.MasterWorkingHourIdTimeFormTo</span>
                                        </li>


                                    </ul>
                                </div>


                            }


                            

                        </div>
                    </div>






                    <!-------------------------The DataBase Of NewsLatter---------- DONE --------------->


                    <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                        <div class="footer-widget mb-40">
                            <div class="footer-title mb-30">
                                <h4>Newsletter</h4>
                            </div>



                            <div class="newsletter-style">
                                <p> Lorem ipsum dolor sit amet, consecte adipisicing elit, sed do.</p>
                                <div id="mc_embed_signup" class="subscribe-form ">

                                    <form asp-controller="Home" asp-action="AddNewsletter">

                                        <div id="mc_embed_signup_scroll" class="mc-form">

                                            <input class="email" asp-for="TransactionNewsletter.TransactionNewsletterEmail"  required="" placeholder="Enter your email" >
                                            <input type="hidden" asp-for="TransactionNewsletter.TransactionNewsletterId">


                                            <div class="mc-news" aria-hidden="true">
                                                <input type="hidden" value="" tabindex="-1" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef">
                                            </div>

                                            <div class="clear">
                                                <input id="mc-embedded-subscribe" class="button" type="submit" name="subscribe" value="Subscribe">
                                            </div>

                                        </div>

                                    </form>
                                </div>
                            </div>



                        </div>
                    </div>



                </div>
            </div>
        </div>




        <!-------------------------The Copy Right ------  DONE------------------->

        <div class="footer-bottom black-bg-2 pb-25 pt-25">
            <div class="container">
                <div class="copyright text-center">
                    @Html.Raw(Model.SystemSetting.SystemSettingCopyright)

               @*     <p>Copyright © <a href="#">Basmoti</a>. All Right Reserved.</p>*@
                </div>
            </div>
        </div>


    </footer>


    <script src="~/assets/js/vendor/jquery-v1.12.4.min.js"></script>
    <script src="~/assets/js/popper.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/ajax-mail.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>
</body>
</html>
