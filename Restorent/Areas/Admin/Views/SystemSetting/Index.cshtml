@model IEnumerable<Restorent.Areas.Admin.ViewModels.SystemSettingModel>

@{
    ViewData["Title"] = "Index";
}

<style>
  

    .dataTable-table > tbody > tr > td, .dataTable-table > tbody > tr > th, .dataTable-table > tfoot > tr > td, .dataTable-table > tfoot > tr > th, .dataTable-table > thead > tr > td, .dataTable-table > thead > tr > th {
        vertical-align: top;
        padding: 8px 3px;
    }



</style>

<div class="pagetitle">
    <h1>System Setting </h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Pages</li>
            <li class="breadcrumb-item active">System Setting</li>
        </ol>
    </nav>
</div><!-- End Page Title -->




<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body" style="overflow-x:auto">
                    <h5 class="card-title d-flex justify-content-end">
                        <a asp-action="Create" class="btn btn-success" id="Creat">Create New +</a>
                    </h5>

                    <table class="table datatable">
                        <thead >
                            <tr @*style="padding: 8px 3px"*@>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingLogoImageUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingLogoImageUrl2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingCopyright)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteBreef)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteDesc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteImageUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingMapLocation)
                                </th>

                                <th> Operations </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr >
                                    <td>
                                       
                                        <img src="~/Admin/assets/img/@item.SystemSettingLogoImageUrl" style="max-width:60px" />
                                    </td>
                                    <td>
                                        
                                        <img src="~/Admin/assets/img/@item.SystemSettingLogoImageUrl2" style="max-width:60px" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SystemSettingCopyright)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteBreef)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteDesc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteUrl)
                                    </td>
                                    <td>

                                        <img src="~/Admin/assets/img/@item.SystemSettingWelcomeNoteImageUrl" style="max-width:117px ; padding-right: 7%" />

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SystemSettingMapLocation)
                                    </td>
                                    <td>

                                        <a asp-action="Edit" asp-route-id="@item.SystemSettingId">
                                            <i class="bx bxs-edit text-secondary h5"></i>
                                        </a>

                                        

                                        <a class="selectDelete" href="" data-paths="@Url.ActionLink("Delete", "SystemSetting",
                                             new {  id=item.SystemSettingId })" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                            <i class="bx bxs-trash text-danger h5"></i>
                                        </a>



                                        @if (item.IsActive == true)
                                        {
                                            <a asp-action="Active" asp-route-id="@item.SystemSettingId">
                                                <i class="ri-eye-fill text-success h5"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Active" asp-route-id="@item.SystemSettingId">
                                                <i class="ri-eye-close-fill text-danger h5"></i>
                                            </a>
                                        }
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                are u delete ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnCancel" data-bs-dismiss="modal">Close</button>
                <input type="button" class="btn btn-danger" id="btnConfirmDelete" value="Delete" />
                

            </div>
        </div>
    </div>
</div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>


<script>

    var idpath = "";
    $(function () {


        $('.selectDelete').click(function () {
            idpath = $(this).data('paths');

        })

        $("#btnConfirmDelete").click(function () {

            window.location = idpath;
            idpath = "";
        })
        $("#btnCancel").click(function () {

            idpath = "";
        })


    })


</script>



