@model Restorent.Areas.Admin.ViewModels.RegisterModel

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Register";

   
}



<div class="pt-4 pb-2">
    <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
    <p class="text-center small">Enter your personal details to create account</p>
</div>



        <form asp-action="Register" class="row g-3 needs-validation" novalidate="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          <div class="col-12"> 
            
             <label asp-for="Email" class="control-label"></label>

             <div class="input-group has-validation">

                <span class="input-group-text" id="inputGroupPrepend"></span>

                <input asp-for="Email" type="email" name="Email" class="form-control" id="Email" required="" />
                <div class="invalid-feedback">Enter Your Email.</div>
                <span asp-validation-for="Email" class="text-danger"></span>
             </div>  

          </div>



          <div class="col-12">        
                <label asp-for="Password" class="control-label"></label>

             <div class="input-group has-validation">
                <input asp-for="Password" type="password" name="Password" class="form-control" id="Password" required="" />
                <span asp-validation-for="Password" class="text-danger"></span>
             </div>


          </div>


           <div class="col-12">
              <label asp-for="ConfirmPassword" class="control-label"></label>

             <div class="input-group has-validation">
               <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" class="form-control" id="Password" required="" />
               <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
              </div>

  
           </div>


            <div class="form-group">
                <input type="submit" value="Create Account" class="btn btn-primary" style="margin-left: 24%;" />
            </div>


        </form>
 





